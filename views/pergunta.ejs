<%- include('./partials/header.ejs') %>

    <body>
        <%- include('./partials/navbar.ejs') %>

            <div class="container">
                <div class="perguntas">
                    <h1><%= pergunta.titulo %></h1>
                    <p><%= pergunta.descricao %></p>
                    <hr>
                </div>
                <div>
                    <h3>Respostas</h3>
                    
                    <% resposta.forEach(element => { %>
                        <div class="card">
                            <div class="card-footer">
                                <p><%= element.corpo %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <hr>
                <form action="/responder" method="post">
                    <div class="mb-3">
                      <h3>Responda</h3>
                      <label for="" class="form-label">Responder:</label>
                      <textarea class="form-control" name="corpo" rows="3"></textarea>
                      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                      <button class="btn btn-success mt-3">Responder</button>
                    </div>
                </form>

            </div>

    </body>
    <%- include('./partials/footer.ejs') %>